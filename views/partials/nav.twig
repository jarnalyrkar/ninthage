{# Example markup #}
<nav class="headerMenu">
  <ul class="headerMenu__list">
    {# mainNav er globalt satt i inc/add_twig_nav.php #}
    {% for item in mainNav.items %}
      <li class="headerMenu__item {{ item.classes|join(' ') }}">
        <a class="headerMenu__link" href="{{ item.link }}">{{ item.title }}</a>
        {% if item.children %}
        <ul class="headerMenu__submenu">
          {% for child in item.children %}
          <li class="headerMenu__item headerMenu__item--sub">
            <a class="headerMenu__link headerMenu__link--sub" href="{{ child.link }}">{{ child.title }}</a>
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </li>
    {% endfor %}
    {# Display languageSelector as part of menu on smaller devices #}
    <li class="languageSelector languageSelector--mobile menu-item-has-children headerMenu__item">
      {% include 'partials/languageSelector.twig' %}
    </li>
  </ul>
</nav>
{# Display languageSelector in it's own container on desktop #}
<li id="desktop_language_switcher" class="languageSelector languageSelector--desktop menu-item-has-children headerMenu__item">
  {% include 'partials/languageSelector.twig' %}
</li>

