{% extends 'layouts/base.twig' %}

{% block content %}
  <div class="container mt-5 scrollSection">
    <div class="row mx-0">
      <h1 class="scrollSection__title">All 9th Age Issues</h1>
    </div>
    <div class="row">
      {% for post in posts %}
        <a class="scrollSection__link col-12 col-sm-6 col-md-4 col-lg-3 mb-md-4 mb-3" href="{{ Image(post.meta('pdf')).src }}">
          <div class="scrollSection__imgContainer">
            <div class="scrollSection__overlay"></div>
            <img class="scrollSection__img" src="{{ Image(post.meta('thumbnail')).src }}">
          </div>
          <div class="scrollSection__issueTitle">
            <h2>{{ post.title }}</h2>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
{% endblock %}